<link href="https://fonts.googleapis.com/css?family=Roboto" rel="stylesheet">

<%= render "common/errors", model: @film %>
<%= form_for @film do |f| %>
  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>

  <p>
    <%= f.label :premiere %><br>
    <%= f.text_field :premiere %>
  </p>

  <p>
    <%= f.label :length %><br>
    <%= f.text_field :length %>
  </p>

  <p>
    <%= f.label :country %><br>
    <%= f.text_field :country %>
  </p>

  <p>
    <%= f.label :director %><br>
    <%= f.text_field :director %>
  </p>

  <p>
    <%= f.label :screen_writer %><br>
    <%= f.text_field :screen_writer %>
  </p>

  <p>
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </p>

  <p>
    <%= f.label :category %><br>
    <%= f.text_field :category %>
  </p>


  <p>
    <%= f.submit%>
  </p>
<% end %>
