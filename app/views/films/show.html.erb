<link href="https://fonts.googleapis.com/css?family=Roboto" rel="stylesheet">
<link href="https://fonts.googleapis.com/icon?family=Material+Icons"
      rel="stylesheet">

<h1 id = 'title'><%= @film.title %> </h1>

<div id = 'films_list'>
  <p> premiere :
  <span class = "inserts"><%= @film.premiere %> </span></p>

  <p> length :
  <span class = "inserts"><%= @film.length %> </span></p>

  <p> country :
  <span class = "inserts"><%= @film.country %> </span></p>

  <p> director :
  <span class = "inserts"><%= @film.director %> </span></p>

  <p> screenwriter :
  <span class = "inserts"><%= @film.screen_writer %> </span></p>

  <p> description :
  <span class = "inserts"><%= @film.description %> </span></p>

  <p> category :
  <span class = "inserts"><%= @film.category %> </span></p>
</div>

<i class="material-icons md-light">movie</i>

<% if @previous_film %>
  <i class="material-icons">keyboard_arrow_left</i>
  <%= link_to "Previous", film_path(@previous_film), class: 'new_item' %>
<% end %>

<%= link_to "Back to all", films_path, class: 'new_item' %>

<% if @next_film %>
  <%= link_to "Next", film_path(@next_film), class: 'new_item' %>
  <i class="material-icons">keyboard_arrow_right</i>
<% end %>

<h2 id = 'title2'> Add opinion </h2>

<%= render "opinions/form" %>

<h2 id = 'title2'> Oder opinions </h2>

<%= render @film.opinions%>





<%= link_to "Edit", edit_film_path(@film) %>
<%= link_to "Delete", film_path(@film),
                      method: :delete,
                      data: { confirm: "Why? tell me why?"} %>
